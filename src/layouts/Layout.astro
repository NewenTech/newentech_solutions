---
import 'bootstrap/dist/css/bootstrap.min.css';
const { title, description = "NeWenTech - Cybersecurity & Quality Engineering Consulting", image = "/og-image.jpg" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:image" content={image} />
    <slot name="head" />
  </head>
  <body>
    <slot />
  </body>
</html>
